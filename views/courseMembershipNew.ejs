<% layout('layout') -%>
<div class="container col-md-4 col-md-offset-4">
  <h1 class="text-center mt-3 mb-3">New Course Member</h1>
  <%-partial('./partials/messages', { messages: flash() })%>
  <form id="course_membership_form" action="<%= courseMembershipCreatePath(semester_name, module_code)%>" role="form"
    method="post">
    <div class="form-group">
      <label for="semester_name">Semester Name</label>
      <input type="text" readonly class="form-control" id="semester_name" name="semester_name"
        value="<%=semester_name%>"> </input>
    </div>
    <div class="form-group">
      <label for="module_code">Module Code</label>
      <input type="text" readonly class="form-control" id="module_code" name="module_code" value="<%=module_code%>">
      </input>
    </div>
    <div class="form-group">
      <label for="module_code">Role</label>
      <% if (user.is_admin) { %>
      <select class="form-control" id="role" name="role" required="role">
        <option>professor</option>
        <option>TA</option>
        <option>student</option>
      </select>
      <% } else { %>
      <input type="text" readonly class="form-control" id="role" name="role" value="TA"> </input>
      <% } %>
    </div>
    <div class="form-group">
      <label for="user_id">User ID</label>
      <input type="text" class="form-control" id="user_id" name="user_id" required="required" />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>