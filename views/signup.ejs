<%- contentFor('content') %>
<div class="container col-md-4 col-md-offset-4">
  <h1 class="text-center">Sign up</h1>
  <%- messages() %>
  <form id="user_form" action="/signup" role="form" method="post">
    <div class="form-group">
      <label for="id">User ID</label>
      <input
        type="text"
        class="form-control"
        id="id"
        name="id"
        aria-describedby="idHelp"
        placeholder="Enter your user ID"
        required="required"
      />
      <small id="idHelp" class="form-text text-muted">
        Your ID must contain exactly 9 characters, where the first and the last characters must be capital letters and the rest must be digits, e.g. A1234567B.
      </small>
    </div>
    <div class="form-group">
      <label for="name">Name</label>
      <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required="required" />
    </div>
    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        class="form-control"
        id="password"
        name="password"
        placeholder="Enter your password"
        required="required"
      />
    </div>
    <button type="submit" class="btn btn-primary">Sign up</button>
  </form>
</div>

<%- contentFor('script') %>
<script src="/javascripts/userForm.js"></script>
<script>
  (function() {
    window.addEventListener(
      'load',
      function() {
        const forms = [document.getElementById('user_form')];
        Array.prototype.filter.call(forms, function(form) {
          form.addEventListener('submit', check, false);
        });
      },
      false
    );
  })();
</script>
