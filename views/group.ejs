<% layout('layout') -%>
<div class="container mt-3">
  <%-partial('./partials/messages', { messages: flash() })%>
  <h1 class="mt-3 mb-3"><%= group.module_code %></h1>
  <h2><small class="text-muted"><%= group.semester_name %></small></h2>
  <p class="h6">Group: <%= group.name %></p>
  <p class="h6">
    The TA(s) of the group is/are:
    <a href="<%= groupTAsPath(group.semester_name, group.module_code, group.name) %>">
      <i class="fa fa-pencil"></i>
    </a>
  </p>
  <div id="TAs">
    <% if (TAs.length === 0) { %>
    <p><small class="text-muted">Currently no TA is in charge of this group.</small></p>
    <% } %> <% for (var i = 0; i < TAs.length; i++) { %>
    <a href="#" class="btn btn-info btn-sm">
      <%= TAs[i].name%>
    </a>
    <% } %>
  </div>

  <h2 class="mt-3 mb-3">
    Students
    <div class="float-right" style="display: inline">
      <a
        href="<%= groupStudentsPath(group.semester_name, group.module_code, group.name) %>"
        class="btn btn-outline-primary"
      >
        <i class="far fa-plus"></i>
        New Student
      </a>
    </div>
  </h2>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">User ID</th>
        <th scope="col">Name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i = 0; i < students.length; i++) { %>
      <tr>
        <td><%= students[i].user_id %></td>
        <td><%= students[i].name %></td>
        <td>
          <a href="#" class="btn btn-primary">
            <i class="far fa-eye"></i>
          </a>
          <%-partial('./partials/deleteButton', { action: groupStudentPath(group.semester_name, group.module_code,
          group.name, students[i].user_id) })%>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
