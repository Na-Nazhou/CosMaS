<% layout('layout') -%>
<div class="container mt-3">
  <%-partial('./partials/messages', { messages: flash() })%>
  <h1 class="mt-3 mb-3"><%= module_code %></h1>
  <h2><small class="text-muted"><%= semester_name %></small></h2>
  <p class="h6">Forum: <%= forum.title %></p>
  <p class="h6">
    Accessible by groups: <% if (canEditAccess(user, semester_name, module_code)) { %>
    <a href="<%= accessesPath(semester_name, module_code, forum.title) %>">
      <i class="fa fa-pencil"></i>
    </a>
    <% } %>
  </p>
  <hr class="mt-5 mb-5" />
</div>
