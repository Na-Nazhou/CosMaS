<%- contentFor('content') %>
<div class="container">
  <h1>Semesters</h1>
  <%- messages() %>
  <table class="table table-hover">
    <thead>
    <tr>
      <th scope="col">Semester Name</th>
      <th scope="col">Start Time</th>
      <th scope="col">End Time</th>
      <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% for(var i=0; i<data.length; i++) { %>
      <tr>
        <td><%= data[i].name%></td>
        <td><%= data[i].start_time%></td>
        <td><%= data[i].end_time%></td>
        <td>
          <a href="#" class="btn btn-primary">
            <i class="far fa-eye"></i>
          </a>
          <% if (user.is_admin) { %>
            <a href="/semesters/<%= encodeURIComponent(data[i].name)%>/edit" class="btn btn-success">
              <i class="fas fa-edit"></i>
            </a>
            <%- include('./partials/deleteButton', { action: `/semesters/${encodeURIComponent(data[i].name)}` }); %>
          <% } %>
        </td>
      </tr>
    <% } %>
    </tbody>
  </table>
</div>
