<%- contentFor('content') %>
<div class="container">
  <h1>Groups
    <a href="/groups/new" class="btn btn-primary">
      <i class="far fa-plus"></i>
    </a>
  </h1>
  <%- messages() %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Semester Name</th>
        <th scope="col">Module Code</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i=0; i<data.length; i++) { %>
      <tr>
        <td><%= data[i].name%></td>
        <td><%= data[i].semester_name%></td>
        <td><%= data[i].module_code%></td>
        <td>
          <a href="#" class="btn btn-primary">
            <i class="far fa-eye"></i>
          </a>
          <a href="/groups/<%=encodeURIComponent(data[i].name)%>/<%=encodeURIComponent(data[i].semester_name)%>/<%=encodeURIComponent(data[i].module_code)%>/edit"
            class="btn btn-success">
            <i class="fas fa-edit"></i>
          </a>
          <%- include('./partials/deleteButton', { action: `/groups/${encodeURIComponent(data[i].name)}/${encodeURIComponent(data[i].semester_name)}/${encodeURIComponent(data[i].module_code)}` }); %>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
