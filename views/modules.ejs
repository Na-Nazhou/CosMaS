<%- contentFor('content') %>
<div class="container">
  <h1 class="mt-3 mb-3">Modules
    <div class="float-right" style="display: inline">
      <a href="/modules/new" class="btn btn-outline-primary">
        <i class="far fa-plus"></i>
        New Module
      </a>
    </div>
  </h1>
  <%- messages() %>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Module Code</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for(var i=0; i<data.length; i++) { %>
      <tr>
        <td><%= data[i].module_code%></td>
        <td>
          <a href="/courses?module_code=<%= encodeURIComponent(data[i].module_code)%>" class="btn btn-primary">
            <i class="far fa-eye"></i>
          </a>
          <a href="/modules/<%= encodeURIComponent(data[i].module_code) %>/edit" class="btn btn-success">
            <i class="fas fa-edit"></i>
          </a>
          <%- include('./partials/deleteButton',  { action: `/modules/${encodeURIComponent(data[i].module_code)}` }); %>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
