<% layout('layout') -%>
<div class="container">
  <h1 class="mt-3 mb-3">
    Modules (<%= data.length %>)
    <div class="float-right" style="display: inline">
      <a href="<%= moduleNewPath()%>" class="btn btn-outline-primary">
        <i class="fa fa-plus"></i>
        New Module
      </a>
    </div>
  </h1>
  <%-partial('./partials/messages', { messages: flash() })%>
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col">Module Code</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% for(let i = 0; i < data.length; i++) { %>
      <tr>
        <td><%= data[i].module_code%></td>
        <td>
          <a
            href="<%= coursesPath()%>?module_code=<%= encodeURIComponent(data[i].module_code)%>"
            class="btn btn-primary"
          >
            <i class="far fa-eye"></i>
          </a>
          <a href="<%= moduleEditPath(data[i].module_code)%>" class="btn btn-success">
            <i class="fas fa-edit"></i>
          </a>
          <%-partial('./partials/deleteButton',{ action: modulePath(data[i].module_code) })%>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</div>
