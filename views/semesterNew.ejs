<%- contentFor('content') %>
<div class="container col-md-4 col-md-offset-4">
  <h1 class="text-center">New Semester</h1>
  <%- messages() %>
  <form id="semester_form" action="/semesters" role="form" method="post">
    <!-- TODO:Confirm whether we need acad year and sem no -->
    <div class="form-group">
      <label for="academic_year">Academic Year</label>
      <input type="text" class="form-control" id="academic_year" name="academic_year" required="required">
    </div>
    <div class="form-group">
      <label for="semester_number">Semester Number</label>
      <input type="text" class="form-control" id="semester_number" name="semester_number" required="required">
    </div>
    <div class="form-group">
      <label for="start_time">Start Time</label>
      <input type="date" class="form-control" id="start_time" name="start_time" required="required">
    </div>
    <div class="form-group">
        <label for="end_time">End Time</label>
        <input type="date" class="form-control" id="end_time" name="end_time" required="required">
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>