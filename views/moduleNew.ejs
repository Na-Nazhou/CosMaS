<% layout('layout') -%>
<div class="container col-md-4 col-md-offset-4">
  <h1 class="text-center mt-3 mb-3">New Module</h1>
  <%-partial('./partials/messages', { messages: flash() })%>
  <form id="module_form" action="<%= modulesPath()%>" role="form" method="post">
    <div class="form-group">
      <label for="module_code">Module Code</label>
      <input
        type="text"
        class="form-control"
        id="module_code"
        name="module_code"
        aria-describedby="codeHelp"
        required="required"
      />
      <small id="codeHelp" class="form-text text-muted">
        Once there are courses of this module, module code cannot be edited.
      </small>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
  </form>
</div>
